<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @details.each do |detail| %>
      <tr>
        <td><%= detail.firstname %></td>
        <td><%= detail.email %></td>
        <td><%= link_to 'Show', {:controller => "details", :action =>
            "myshow", :adminemail => detail.email} %></td>
        <% check = (detail.email != current_user.email) && (detail.email != "sysadmin@gmail.com") %>
        <td><%= link_to_if check, 'Destroy', detail, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

