<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @details.each do |detail| %>
      <tr>
        <td><%= detail.firstname %></td>
        <td><%= detail.email %></td>
        <td><%= link_to 'Show', { :controller => "details", :action =>
            "myshow", :adminemail => detail.email}  %></td>


        <% if detail.email == 'sysadmin@gmail.com' %>
            <td>Destroy</td>

      <% elsif detail.email == current_user.email %>
            <td>Destroy</td>
      <% else %>
            <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      <% end %>


      </tr>
  <% end %>
  </tbody>
</table>

