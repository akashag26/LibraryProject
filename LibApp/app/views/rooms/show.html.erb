<%= stylesheet_link_tag 'rooms' %>
<h1>Listing Rooms</h1>

<table align="center">
  <thead>
  <tr>
    <th>Room No</th>
    <th>Size</th>
    <th>Building</th>
    <th>Status</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>
  <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_no %></td>
        <td><%= room.size %></td>
        <td><%= room.building %></td>
        <td><%= room.status %></td>
        <td><%= link_to "Edit", {:action => "edit", :id => room.id} %> |
          <%= link_to "Delete", room, method: :delete, data: {confirm: "Are You sure?"} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add room', rooms_add_path %>
