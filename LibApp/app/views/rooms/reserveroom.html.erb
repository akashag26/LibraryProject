<% provide(:title, 'Search Room') %>
<h1>Search Room</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_tag rooms_reserveroom_path, :method => 'get' do %>
        <p>
          <%= label_tag :room_no, "Room No" %>
          <%= text_field_tag :room_no, params[:room_no] %>
          <%= label_tag :size, "Size" %>
          <%= select_tag :size, options_for_select([["", ""], ["Small - 4 chairs", "small"], ["Medium - 6 chairs", "medium"], ["Large - 12 chairs", "large"]], :selected => params[:size]) %>
          <%= label_tag :building, "Building" %>
          <%= select_tag :building, options_for_select([["", ""], ["D.H Hill", "hill"], ["James B. Hunt", "hunt"]], :selected => params[:building]) %>
          <%= label_tag :status, "Status" %>
          <%= select_tag :status, options_for_select(["", "Available", "Booked"], :selected => params[:status]) %>
          <br>
          <%= submit_tag "Search", :name => nil %>
        </p>
    <% end %>

    <%= will_paginate @rooms, previous_label: h("<"), next_label: h(">") %>
    <table align="center">
      <thead>
      <tr>
        <th>Room No</th>
        <th>Size</th>
        <th>Building</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
      </thead>

      <tbody>
      <% @rooms.each do |room| %>
          <tr>
            <td><%= room.room_no %></td>
            <td><%= room.size %></td>
            <td><%= room.building %></td>
            <td><%= room.status %></td>
            <% if room.status == "Available" %>
                <td><%= link_to "Details", {:action => "edit", :id => room.id} %></td>
            <% else %>
                <td><%= link_to "Release", {:action => "edit", :id => room.id} %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
